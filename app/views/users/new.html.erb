<%= form_for @user do |form| %>

<%= form.label :name %>
<%= form.text_field :name %><br/>

<%= form.label :email %>
<%= form.text_field :email %><br/>

<%= form.label :password %>
<%= form.text_field :password %><br/>

<%= form.label :password_confirmation %>
<%= form.text_field :password_confirmation %><br/><br/>

<%= form.submit "Save" %>
<% end %>

